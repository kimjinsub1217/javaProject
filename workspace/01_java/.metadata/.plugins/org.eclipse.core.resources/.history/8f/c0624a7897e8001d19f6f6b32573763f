class Zoo {
	Animal animal = new Animal();
	Animal arr[] = new Animal[3];
	Animal[] animals = new Animal[100];
	Scanner sc = new Scanner(System.in);

	public void saveAnimalInfo() {

	}

	public void inputAnimalNumber() {
		int count = 0;
		while (true) {
			System.out.println("동물의 종류를 입력해주세요");
			System.out.println("1. 코끼리 2. 사막여우 3. 캥거루 0. 입력끝");
			int number = sc.nextInt();

			if (number == 1) {
				System.out.println("동물의 이름을 입력하세요.");
				String name = sc.next();
				animal = new Elephant(name);
			} else if (number == 2) {

			} else if (number == 3) {
				
			} else if (number == 0) {
				break;
			}

			animals[count] = animal;
			count++;
		}

		for (int i = 0; i < count; i++) {
			Animal animal = animals[i];
			System.out.println(animal.toString());
		}
	}

}

class Animal {
	private String name;

	public Animal(String name) {
		this.name = name;
	}
}

class Elephant extends Animal {

	private int legs;
	private String noseLength;
	private String bodySize;
	private String food;

	public Elephant(String name) {
		super(name);
		legs = 4;
		noseLength = "길다";
		bodySize = "크다";
		food = "나뭇잎";
	}
	public int getLegs() {
        return legs;
    }

    public String getNoseLength() {
        return noseLength;
    }

    public String getBodySize() {
        return bodySize;
    }

    public String getFood() {
        return food;
    }
}
